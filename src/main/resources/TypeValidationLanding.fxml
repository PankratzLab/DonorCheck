<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.text.TextFlow?>

<BorderPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
    <center>
      <AnchorPane>
         <children>
            <TextFlow>
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="This tool can be used to validate a donor's typing before saving to DonorNet.&#10;&#10;Validating a donor requires comparison of two files:&#10;   - PDF typing assignment (SureTyper or SCORE6)&#10;   - DonorNet &quot;Crossmatch &amp; HLA&quot; page  (XML or HTML)&#10;&#10;At the end of validation you will be presented with a summary which can be saved.&#10;&#10;You can get started by clicking the button below.">
                     <font>
                        <Font size="18.0" />
                     </font>
                  </Text>
               </children>
            </TextFlow>
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="15.0" right="15.0" top="5.0" />
         </BorderPane.margin>
      </AnchorPane>
   </center>
   <top>
      <MenuBar BorderPane.alignment="TOP_LEFT">
        <menus>
          <Menu mnemonicParsing="false" text="File">
            <items>
              <MenuItem mnemonicParsing="false" onAction="#fileQuitAction" text="Quit" />
            </items>
          </Menu>
            <Menu mnemonicParsing="false" text="Tutorials">
              <items>
                <MenuItem mnemonicParsing="false" onAction="#tutorialXMLDownload" text="XML DonorNet Download" />
                  <MenuItem mnemonicParsing="false" onAction="#tutorialHTMLDownload" text="HTML DonorNet Download" />
              </items>
            </Menu>
        </menus>
      </MenuBar>
   </top>
   <bottom>
      <ButtonBar buttonOrder="L_HEU+FBIX_NCYOA_R" BorderPane.alignment="CENTER_RIGHT">
        <buttons>
          <Button defaultButton="true" mnemonicParsing="false" onAction="#runValidation" prefHeight="80.0" style="-fx-background-color: #FFCC00;" text="Start Validation">
               <font>
                  <Font size="24.0" />
               </font>
            </Button>
        </buttons>
         <BorderPane.margin>
            <Insets bottom="15.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </ButtonBar>
   </bottom>
</BorderPane>
