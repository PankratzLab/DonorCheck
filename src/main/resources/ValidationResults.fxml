<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import org.pankratzlab.unet.jfx.wizard.ValidatingWizardPane?>

<ValidatingWizardPane fx:id="rootPane" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1">
   <header>
      <BorderPane>
         <center>
            <Label text="Validation Results">
               <font>
                  <Font size="20.0" />
               </font>
            </Label>
         </center>
         <top>
            <MenuBar BorderPane.alignment="CENTER">
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem fx:id="saveOption" mnemonicParsing="false" onAction="#saveResults" text="Save..." />
                        <MenuItem fx:id="printOption" mnemonicParsing="false" onAction="#printResults" text="Print..." />
                  </items>
                </Menu>
              </menus>
            </MenuBar>
         </top>
      </BorderPane>
   </header>
   <padding>
      <Insets bottom="10.0" />
   </padding>
   <content>
      <VBox alignment="TOP_RIGHT">
         <children>
            <TableView fx:id="resultsTable" fixedCellSize="30.0" prefHeight="635.0">
              <columns>
                  <TableColumn fx:id="rowLabelCol" editable="false" prefWidth="125.0" sortable="false" styleClass="row-labels" />
                <TableColumn fx:id="firstSourceCol" editable="false" prefWidth="125.0" sortable="false" />
                <TableColumn fx:id="isEqualCol" editable="false" prefWidth="100.0" sortable="false" text="Matches" />
                  <TableColumn fx:id="secondSourceCol" editable="false" prefWidth="125.0" sortable="false" />
              </columns>
               <columnResizePolicy>
                  <TableView fx:constant="CONSTRAINED_RESIZE_POLICY" />
               </columnResizePolicy>
            </TableView>
            <Label fx:id="resultDisplayText" text="Validation Successful/Failed">
               <font>
                  <Font name="System Bold" size="28.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Label>
         </children>
      </VBox>
   </content>
</ValidatingWizardPane>
